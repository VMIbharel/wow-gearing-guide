---
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
import SpeedInsights from "@vercel/speed-insights/astro";
interface Props {
  title?: string;
}

const { title = "WoW Gearing Guide" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script is:inline>
      // Éviter le flash de thème incorrect
      const stored = localStorage.getItem("theme");
      const theme =
        stored ??
        (window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light");

      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      }

      // Initialize language
      const storedLang = localStorage.getItem("language");
      const browserLang = navigator.language.toLowerCase();
      const lang = storedLang ?? (browserLang.startsWith("fr") ? "fr" : "en");
      document.documentElement.lang = lang;
    </script>
    <script is:inline>
      // Wallpaper — appliqué uniquement si le fichier existe (dark et light)
      (function () {
        var isDark = document.documentElement.classList.contains("dark");
        var isMobile = window.innerWidth < 768;

        function tryLoad(src, cssVar, isActive) {
          var img = new Image();
          img.onload = function () {
            document.documentElement.style.setProperty(cssVar, "url('" + src + "')");
            if (isActive) document.documentElement.classList.add("has-bg");
          };
          img.src = src;
        }

        tryLoad(
          isMobile ? "/bg_dark_mobile.webp" : "/bg_dark_desktop.webp",
          "--bg-dark-image",
          isDark
        );
        tryLoad(
          isMobile ? "/bg_light_mobile.webp" : "/bg_light_desktop.webp",
          "--bg-light-image",
          !isDark
        );
      })();
    </script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="192x192" href="/favicon-192.png" />
    <link rel="apple-touch-icon" href="/favicon-192.png" />
    <meta
      name="description"
      content="Guide interactif pour optimiser la montée en item level dans World of Warcraft"
    />
    <title>{title}</title>
    <script is:inline>window.whTooltips = { colorLinks: true, iconizeLinks: true, renameLinks: true };</script>
    <script is:inline src="https://wow.zamimg.com/js/tooltips.js" async></script>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <slot />

    <Analytics />
    <SpeedInsights />
  </body>
</html>
